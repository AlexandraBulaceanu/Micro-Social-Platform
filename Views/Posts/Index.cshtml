@model Reaction.Models.Post

@{
    Layout = null;
    ViewBag.Message = "Here will be one post with comments";
}


@if (TempData.ContainsKey("NewPost"))
{
    <h1>@ViewBag.newPost</h1>
}
@if (TempData.ContainsKey("EditPost"))
{
    <h1>@ViewBag.editPost</h1>
}
@if (TempData.ContainsKey("DeletePost"))
{
    <h1>@ViewBag.deletePost</h1>
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h2>These are my posts</h2>

        <a class="btn btn-primary" href="/Posts/New">New post</a>
        <br />


        @foreach (Reaction.Models.Post post in ViewBag.Posts)
        {
            <div class="panel panel-default">
                @Html.Partial("PostInfo", post)
            </div>
        }

    </div>
</body>
</html>


