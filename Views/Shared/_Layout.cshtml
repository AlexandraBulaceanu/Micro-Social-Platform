<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Reaction</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Reaction", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Posts", "Index", "Posts")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Requests", "FriendRequest", "Friends")</li>
                    <li>@Html.ActionLink("Friends", "ShowFriends", "Friends")</li>
                    <li style="margin-top: 10px">
                        <form method="post" action="/Home/findUsers">
                            <input class="input-sm" type="text" name="Username" placeholder="Search user here" />
                            <button class ="btn-sm btn-primary" type="submit">Search</button>
                        </form>
                    </li>
                    <li>@Html.ActionLink("Groups", "Index", "Groups")</li>
                    <li><a href="/Profiles/Show/@ViewBag.ProfileId">Profile</a> </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
            @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
