<div class="container">
    <div class="row justify-content-center">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h6 class="text-center font-weight-light my-4">Username here</h6></div>
            <div class="card-body">
                <div class="form-row">
                    <div class="col-md-6">
                        @Model.Date
                    </div>
                    <div class="col-md-6">
                        @Model.Likes
                    </div>
                </div>
                <h3 class="form-row">
                    @Model.Content
                </h3>
                <div class="form-row">
                    <div class="form-group mt-4 mb-0"><a class="btn btn-danger btn-block" href="/Comments/Show">Delete</a></div>
                    <div class="form-group mt-4 mb-0"><a class="btn btn-secondary btn-block" href="/Comments/Edit">Edit</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
