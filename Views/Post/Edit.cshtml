@model Reaction.Models.Post


@using (Html.BeginForm(actionName: "Edit", controllerName: "Posts"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.PostId) //nujt ce face asta
    <br />
    @Html.Label("Content", "Post text")
    <br />
    @Html.EditorFor(m => m.Content)
    @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.HiddenFor(m => m.Date)
    <br />
    <button class="btn btn-sm btn-success" type="submit">Modify post</button>
}

